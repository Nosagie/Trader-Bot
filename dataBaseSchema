CREATE TABLE TRADEDPAIRS(
    QUOTE_ASSET VARCHAR NOT NULL,
    BASE_ASSET VARCHAR NOT NULL,
    MIN_LOT_QTY NUMERIC NOT NULL,
    MAX_LOT_QTY NUMERIC NOT NULL,
    STEP_SIZE_QTY NUMERIC NOT NULL,
    PERIOD_TIMESTAMP BIGSERIAL NOT NULL
);


CREATE TABLE PORTFOLIO(
    BASE_ASSET VARCHAR NOT NULL,
    QUOTE_ASSET VARCHAR(10) NOT NULL,
    COST_PRICE NUMERIC NOT NULL,
    BASE_NOTIONAL NUMERIC NOT NULL,
    BASE_ASSET_QTY NUMERIC NOT NULL
);


CREATE TABLE ORDERS(
    BASE_ASSET VARCHAR NOT NULL,
    QUOTE_ASSET VARCHAR NOT NULL,
    EXCH_ORDER_ID VARCHAR NOT NULL,
    CLIENT_ORDER_ID VARCHAR NOT NULL,
    EXEC_TIMESTAMP BIGSERIAL NOT NULL,
    QUOTE_ASSET_PRICE NUMERIC NOT NULL,
    BASE_ASSET_QTY NUMERIC NOT NULL,
    BUY_OR_SELL CHAR(3) NOT NULL,
    TOTAL_COMM NUMERIC NOT NULL,
    COMM_ASSET VARCHAR NOT NULL
);